
@model ExtraSupply



<div class="card-header; text-center;">
    <h2 style="color:darkkhaki; text-align:center">ADMİN EXTRA SUPPLY UPDATING PAGE</h2>



    @if (Model != null)
    {
        <h3 class="text-center"> Güncellenecek Ekstra Malzeme: @Model.ExtraSupplyName Fiyatı: @Model.Price </h3>
    }



</div>
<div class="card-body">
    <form asp-area="Admin" asp-controller="ExtraSupply" asp-action="Guncelle" method="post">
        <div class="form-group">
            <label asp-for="ExtraSupplyName">EXTRA SUPPLY NAME:</label>
            <input asp-for="ExtraSupplyName" type="text" class="form-control" />
            <span asp-validation-for="ExtraSupplyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">EXTRA SUPPLY PRICE</label>
            <input asp-for="Price" type="text" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">UPDATE</button>
    </form>
</div>