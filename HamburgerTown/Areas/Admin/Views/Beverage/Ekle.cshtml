
@model Beverage

<div class="card-header; text-center;">
    <h2 style="color:darkkhaki; text-align:center">ADMİN BEVERAGE ADDING PAGE</h2>
</div>

<div class="card-body">
    <form asp-area="Admin" asp-controller="Beverage" asp-action="Ekle" method="post">
        <div class="form-group">
            <label asp-for="BeverageName">BEVERAGE NAME:</label>
            <input asp-for="BeverageName" type="text" class="form-control" />
            <span asp-validation-for="BeverageName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">BEVERAGE PRICE:</label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">ADD</button>
    </form>
</div>


